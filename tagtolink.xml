<config>
    <fields name="params">
       <fieldset name="basic">
        <field
				name="parents"
				type="tag"
				label="PLG_CONTENT_TAGTOLINK_PARAMS_BASIC_PARENTS_LABEL"
				description="PLG_CONTENT_TAGTOLINK_PARAMS_BASIC_PARENTS_LABEL"
				mode="nested"
				class="inputbox span12 small"
				multiple="true" />

			
		<field
					name="route"
					type="list"
					default="router"
					label="PLG_CONTENT_TAGTOLINK_PARAMS_BASIC_ROUTE_LABEL"
					description="PLG_CONTENT_TAGTOLINK_PARAMS_BASIC_ROUTE_DESC">

          <option value="none">PLG_CONTENT_TAGTOLINK_OPTIONS_NONE</option>
					<option value="path">PLG_CONTENT_TAGTOLINK_OPTIONS_PATH</option>
					<option value="router">PLG_CONTENT_TAGTOLINK_OPTIONS_ROUTER</option>
				</field>
				</fieldset>
    </fields>

  </config>
