	<description>PLG_CONTENT_TAGTOLINK_DESC</description>

	<files>
		<filename plugin="tagtolink">tagtolink.php</filename>
    <filename>LICENSE.txt</filename>
	</files>

  <languages>
		<language tag="en-GB">language/en-GB/plg_content_tagtolink.ini</language>
